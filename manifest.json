{
    "name": "SAT Bot Form Fill",
    "description": "Automated form filling extension for SAT Billing.",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "activeTab",
        "scripting",
        "tabs",
        "nativeMessaging",
        "storage"
    ],
    "host_permissions": [
        "https://*.sat.gob.mx/*",
        "https://portal.facturaelectronica.sat.gob.mx/*"
    ],
    "web_accessible_resources": [
        {
            "resources": ["temp/certificado.cer", "temp/llave.key", "js/*"],
            "matches": ["<all_urls>"]
        }
    ],
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "128": "128.png"
        }
    },
    "icons": {
        "16": "128.png",
        "48": "128.png",
        "128": "128.png"
    },
    "background": {
        "service_worker": "js/background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": [
                "js/popup.js"
            ],
            "css": ["css/style.css"]
        }
    ]
}